<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="Theme.Text" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorPrimary">@color/main_bg_color</item>
        <item name="colorPrimaryVariant">@color/bottom_nav_tint</item>
        <item name="colorOnPrimary">@color/black</item>
        <item name="android:windowAnimationStyle">@null</item>
        <item name="colorAccent">@color/bottom_nav_tint</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/main_bg_color</item>
        <item name="android:windowLightStatusBar">true</item>
    </style>

    <style name="DialogAnimation">
        <item name="android:windowEnterAnimation">@anim/slide_up</item>
        <item name="android:windowExitAnimation">@anim/slide_bottom</item>
    </style>

    <style name="ToolBarStyle" parent="Theme.AppCompat">
        <item name="android:textColorPrimary">@android:color/black</item>
        <item name="android:textColorSecondary">@android:color/black</item>
        <item name="actionMenuTextColor">@android:color/black</item>
    </style>

    <style name="TextViewMediumNormalBlack" parent="@android:style/TextAppearance.Medium">
        <item name="android:textColor">@color/black</item>
        <item name="android:textAlignment">center</item>
        <item name="android:fontFamily">@font/rubik_regular</item>
        <item name="android:textStyle">normal</item>
        <item name="android:padding">10dp</item>
    </style>

    <style name="EditTextStyle" parent="@android:style/TextAppearance.Medium">
        <item name="android:textColor">@color/black</item>
        <item name="android:fontFamily">@font/rubik_regular</item>
        <item name="android:textStyle">normal</item>
        <item name="android:padding">10dp</item>
        <item name="android:gravity">top</item>
        <item name="android:background">@drawable/border</item>
        <item name="android:textColorHighlight">@color/bottom_nav_tint_new</item>
    </style>

    <style name="EditTextStylishText" parent="@android:style/TextAppearance.Medium">
        <item name="android:textColor">@color/bottom_nav_tint</item>
        <item name="android:fontFamily">@font/rubik_regular</item>
        <item name="android:textStyle">normal</item>
        <item name="android:gravity">top</item>
        <item name="android:background">@drawable/edit_text_bg</item>
    </style>

    <style name="TextViewMediumNormalWhite" parent="@android:style/TextAppearance.Medium">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">14sp</item>
        <item name="android:fontFamily">@font/rubik_regular</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="TextViewMediumBlackBold" parent="@android:style/TextAppearance.Medium">
        <item name="android:textColor">@color/black</item>
        <item name="android:padding">10dp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:fontFamily">@font/rubik_regular</item>
    </style>

    <style name="ButtonStyle" parent="@android:style/TextAppearance.Medium">
        <item name="android:textColor">@color/black</item>
        <item name="android:fontFamily">@font/rubik_regular</item>
        <item name="android:textStyle">normal</item>
        <item name="android:padding">30dp</item>
        <item name="android:width">200dp</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_margin">20dp</item>
        <item name="android:background">@drawable/button_bg_shape</item>
    </style>

</resources>